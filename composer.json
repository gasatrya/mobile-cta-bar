{
  "name": "gasatrya/mobiflow",
  "description": "Sticky Floating Button for Call, Messaging & Booking",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Ga Satrya"
    }
  ],
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "wp-coding-standards/wpcs": "3.2.0",
    "squizlabs/php_codesniffer": "^3.13",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "archive": {
    "exclude": [
      ".git/",
      ".gitignore",
      ".distignore",
      ".wordpress-org/",
      "composer.json",
      "composer.lock",
      "phpcs.xml.dist",
      ".phpcs-cache",
      "vendor/",
      "node_modules/",
      "package.json",
      "package-lock.json",
      "README.md",
      "AGENTS.md",
      "GEMINI.md"
    ]
  },
  "scripts": {
    "zip": "git archive --prefix=mobiflow/ -o mobiflow.zip HEAD",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "i18n": "wp i18n make-pot . languages/mobiflow.pot"
  }
}